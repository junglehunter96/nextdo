/* components/episode/index.wxss */

.container{
  height:80rpx;
  padding:5rpx 30rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items:flex-end;
  background:linear-gradient(#fcfcfc, #ececec);
}

.index-container{
  display:flex;
  flex-direction: row; 
  margin-bottom: 5rpx;     
}

.plain{
  font-size:32rpx;
}


.index{
  font-size:60rpx;
  line-height:60rpx; 
  font-weight:800;
  margin-right:14rpx;
}

.line{
  height:50rpx;
  margin-right:14rpx;
  border-left:1px solid black;
}


.date-container{
  display: flex;
  flex-direction: column;
  margin-top:6rpx;
}

.month{
  font-size:24rpx;
  line-height: 24rpx;
}

.year{
  font-size:20rpx;
}
.city-container {
  font-size: 24rpx;
  color: #3e4d5f;
  margin-bottom: 10rpx;
}
.city-text {
  margin-right: 10rpx;
  
}